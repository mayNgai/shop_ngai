<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layPic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profilePicImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/com_facebook_profile_picture_blank_square" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_account_box_black_24dp" />

                        <EditText
                            android:id="@+id/input_first_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.7"
                            android:layout_marginLeft="5dp"
                            android:inputType="text"
                            android:textSize="@dimen/font_20"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:enabled="false"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="@string/hint_first_name"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/com_facebook_button_background_color_disabled" />

                    <ImageView
                        android:id="@+id/imgEditFirstName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:src="@drawable/ic_mode_edit_black_24dp" />
                    <ImageView
                        android:id="@+id/imgSuccessFirstName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:visibility="gone"
                        android:src="@drawable/ic_done_black_24dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_account_box_black_24dp" />

                        <EditText
                            android:id="@+id/input_last_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:layout_weight="1.7"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/font_20"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:enabled="false"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="@string/hint_last_name"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/com_facebook_button_background_color_disabled" />

                    <ImageView
                        android:id="@+id/imgEditLastName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:src="@drawable/ic_mode_edit_black_24dp" />
                    <ImageView
                        android:id="@+id/imgSuccessLastName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:visibility="gone"
                        android:src="@drawable/ic_done_black_24dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_phone_black_24dp" />

                        <EditText
                            android:id="@+id/input_tel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:layout_weight="1.7"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/font_20"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:enabled="false"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="@string/hint_phone_number"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/com_facebook_button_background_color_disabled" />

                    <ImageView
                        android:id="@+id/imgEditTel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:src="@drawable/ic_mode_edit_black_24dp" />
                    <ImageView
                        android:id="@+id/imgSuccessTel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:visibility="gone"
                        android:src="@drawable/ic_done_black_24dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:src="@drawable/ic_mail_black_24dp" />

                        <EditText
                            android:id="@+id/input_mail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:layout_weight="1.7"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/font_20"
                            android:background="@android:drawable/dialog_holo_light_frame"
                            android:enabled="false"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="@string/hint_email"
                            android:textColor="@android:color/black"
                            android:textColorHint="@color/com_facebook_button_background_color_disabled" />

                    <ImageView
                        android:id="@+id/imgEditEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:src="@drawable/ic_mode_edit_black_24dp" />
                    <ImageView
                        android:id="@+id/imgSuccessEmail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:visibility="gone"
                        android:src="@drawable/ic_done_black_24dp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/com_facebook_tooltip_blue_background"
            android:text="Log out"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</LinearLayout>